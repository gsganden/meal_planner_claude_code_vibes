# Authentication
JWT_SECRET_KEY="your-secure-random-string-here"

# LLM Integration (Google Gemini)
GOOGLE_API_KEY="your-google-api-key"
GOOGLE_OPENAI_BASE_URL="https://generativelanguage.googleapis.com/v1beta/openai/"

# Database (for local development)
DATABASE_URL="sqlite+aiosqlite:///./local_dev.db"

# Application
APP_NAME="Recipe Chat Assistant"
DEBUG="true"
# For production, add your frontend URLs (Vercel, Netlify, etc)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Email Service (for password reset)
# Configure these with your SMTP provider
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_EMAIL="noreply@recipe-chat.app"